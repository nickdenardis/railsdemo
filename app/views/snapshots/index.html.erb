<% content_for :title, @site.url %>
<div class="row">
	<div class="twelve columns">
		<ul class="breadcrumbs">
		  <li><%= link_to 'Home', root_url %></li>
		  <li><%= link_to 'Sites List', sites_path %></li>
		  <li class="current"><%= link_to 'Snapshots', site_path(@site) %></li>
		</ul>
		<h3><%= @site.url %> <small><span class="alert label radius"><%= link_to 'Delete', @site, :method => 'delete', :confirm => 'Are you sure?' %></span></small></h3>

		<%= form_for [@site, @snapshot] do |f| %>
			<%= f.submit "New Snapshot" %>
		<% end %>

		<div class="row">
			<% for snapshot in @snapshot_list %>
				<div class="three mobile-two columns">
					<%= link_to site_snapshot_path(@site, snapshot) do %>

		     		<%= image_tag "#{snapshot.public_url}", {:width => 300} %>
		     	<% end %> 

		      <div class="panel">
		        <h5><%= time_ago_in_words(snapshot.created_at) %> ago</h5>
		      </div>
		    </div>
			<% end %>
		</div>
	</div>
</div>
